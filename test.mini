print("--- Basic Types ---");
let x = 10;
let pi = 3.14159;
let s = "Hello Mini";
let b = true;

print(x);
print(pi);
print(s);
print(b);

print("--- Arithmetic ---");
let sum = x + 20;
print(sum);
let area = pi * 2.0 * 2.0;
print(area);

print("--- Control Flow ---");
if (x < 20) {
    print("x is small");
} else {
    print("x is big");
}

let i = 0;
while (i < 3) {
    print(i);
    i = i + 1;
}

for (let j = 0; j < 3; j = j + 1) {
    print(j * 10);
}

print("--- Functions ---");
fn add(a: int, b: int) -> int {
    return a + b;
}
print(add(100, 200));

fn fib(n: int) -> int {
    if (n < 2) return n;
    return fib(n - 1) + fib(n - 2);
}
print(fib(10));

print("--- Arrays ---");
let arr = [1, 2, 3];
print(arr[0]);
arr[0] = 100;
print(arr[0]);

print("--- Structs ---");
struct Point { x: int, y: int }
let p = Point { x: 10, y: 20 };
print(p.x);
print(p.y);
